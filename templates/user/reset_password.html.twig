{% extends 'base.html.twig' %}

{% block title %}Recover Password{% endblock %}

{% block body %}

    <main class="container-fluid w-100" role="main">
        <div class="row">
            <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center bg-white mnh-100vh">
                <a class="u-login-form py-3 mb-auto" href="index.html">
                    <img class="img-fluid" src="{{ asset('assets/front/') }}img/logo.png" width="160" alt="Stream Dashboard UI Kit">
                </a>
                <div class="u-login-form">
                    {% if form == 'code' %}
                    <form class="mb-3" action="" method="get">
                        <div class="mb-3">
                            <h1 class="h2">Reset Password</h1>
                            <p class="small">Provide email and pic code to reset your password</p>
                        </div>
                        {#<p class="text-danger">{{ error }}</p>#}
                        <div class="form-group mb-3">
                            <label for="email">Email</label>
                            <input id="email" required class="form-control" value="{{ app.request.get('email') }}" name="email" type="text" placeholder="">
                        </div>
                        <div class="form-group mb-3">
                            <label for="pin_code">Pin code</label>
                            <input id="pin_code" required class="form-control" value="{{ app.request.get('pin_code') }}" name="pin_code" type="number" placeholder="">
                        </div>
                        <button class="btn btn-primary btn-block submit-btn" type="submit">Reset my password</button>
                    </form>
                        {% else %}
                    <form class="mb-3" action="" method="post">
                        <div class="mb-3">
                            <h1 class="h2">Type your new password</h1>
                            <p class="small">Enter your new password</p>
                        </div>
                        <p class="text-danger">{{ error }}</p>
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="password">Password</label>
                                    <input id="password" required class="form-control" name="password" type="password" placeholder="Enter your password">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="confirmPassword">Confirm password</label>
                                    <input id="confirmPassword" required class="form-control" name="confirmPassword" type="password" placeholder="Re-enter your password">
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary btn-block submit-btn" type="submit">Reset my password</button>
                    </form>
                    {% endif %}
                    <p class="small">
                        <a href="#">Login here</a>
                    </p>
                </div>

            </div>

            <div class="col-lg-6 d-none d-lg-flex flex-column align-items-center justify-content-center bg-light">
                <iframe src="{{ path('slider') }}" frameborder="0" style="width: 100%; height: 100%"></iframe>
            </div>
        </div>

    </main>

{% endblock %}
{% block javascripts %}
{% endblock %}