{% extends 'base.html.twig' %}

{% block title %}Recover Password{% endblock %}

{% block body %}

    <main class="container-fluid w-100" style="height: 628px!important;" role="main">
        <div class="row">
            <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center bg-white">
                {#<a class="u-login-form py-3 mb-auto" href="index.html">
                    <img class="img-fluid" src="{{ asset('assets/front/') }}img/logo.png" width="160" alt="Stream Dashboard UI Kit">
                </a>#}

                <div class="u-login-form" style="height: 130px; padding-top: 7px;">
                    <img class="img-fluid" src="{{ asset('assets/front/') }}img/logo.png" width="160" alt="Stream Dashboard UI Kit">
                </div>

                <div class="u-login-form" style="padding-bottom: 30%; padding-top: 15%;">
                    <form class="mb-3" action="" method="post">
                        <div class="mb-3">
                            <h1 class="h2">Recover Your Password</h1>
                            <p class="small">Enter Your email address to get a pin code for resetting password</p>
                        </div>
                        <p class="text-danger">{{ error }}</p>
                        <div class="form-group mb-3">
                            <label for="email">Email</label>
                            <input id="email" required class="form-control" value="{{ app.request.get('email') }}" name="email" type="text" placeholder="">
                        </div>
                        <button class="btn btn-primary btn-block submit-btn" type="submit">Reset my password</button>
                    </form>
                </div>

            </div>

            <div class="col-lg-6 d-none d-lg-flex flex-column align-items-center justify-content-center bg-light">
                <iframe src="{{ path('slider') }}" scrolling="no" frameborder="0" style="width: 100%; height: 100%"></iframe>
            </div>
        </div>

    </main>

{% endblock %}
{% block javascripts %}
{% endblock %}